<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

	<TableLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="top"
	    android:stretchColumns="0" >
		
	<TableRow>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dip"
        android:src="@drawable/logo"
        android:contentDescription="logo"
        android:gravity="center" />
	</TableRow>
	<TableRow>

	<Button
	    android:id="@+id/play"
	    android:layout_width="wrap_content"
	    android:layout_height="80dip"
	    android:layout_marginBottom="10dip"
	    android:gravity="center"
	    android:textAllCaps="true"
	    android:textColor="#FFFFFF"
	    android:onClick="gioca" />

	</TableRow>
	<TableRow>
	<Button
	    android:id="@+id/classifica"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:layout_height="80dip"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:onClick="leggiclassifica" />
    </TableRow>
    <TableRow>
	    <Button
	        android:id="@+id/credits"
	        android:layout_width="wrap_content"
	        android:textColor="#FFFFFF"
	        android:textAllCaps="true"
	        android:layout_height="80dip"
	        android:layout_marginBottom="10dip"
	        android:gravity="center" 
	        android:onClick="leggicredits"  />
    </TableRow>
    <TableRow>
	    <Button
	        android:id="@+id/cambialingua"
	        android:layout_width="wrap_content"
	        android:textColor="#FFFFFF"
	        android:textAllCaps="true"
	        android:layout_height="80dip"
	        android:layout_marginBottom="10dip"
	        android:gravity="center"
	        android:onClick="cambialingua"  />
	</TableRow>
	<TableRow >
	     <Button
		        android:id="@+id/muta"
		        android:layout_width="wrap_content"
		        android:textColor="#FFFFFF"
		        android:textAllCaps="true"
		        android:layout_height="80dip"
		        android:layout_marginBottom="10dip"
		        android:gravity="center"
		        android:onClick="cambiasuono"  />
	</TableRow>
    <TableRow>
    <Button
        android:id="@+id/esci"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:layout_height="80dip"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:onClick="esci"/>
	</TableRow>
	</TableLayout>
</ScrollView>